{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - News{% endblock %}

{% block body %}
  <nav style="font-size: 0.8em; border-bottom: none; margin-bottom: 0;">
    <a href="{{ path('app_launcher') }}">Overview</a>
    <a href="{{ path('app_news') }}">News</a>
    <a href="{{ path('app_about') }}">About</a>
    <a href="{{ path('app_handbook') }}">Wiki</a>
  </nav>
  <hr style="margin-top: 0;">

  <h1>{{ post.title }}</h1>
  <p style="font-size: 0.9em; color: #666; margin-bottom: 30px;">
    {% if post.category %}
        <span style="background: rgba(255,255,255,0.1); padding: 2px 6px; border-radius: 4px; margin-right: 8px; border: 1px solid rgba(255,255,255,0.2);">{{ post.category.name }}</span>
    {% endif %}
    Published on {{ post.date|date('F d, Y') }}
  </p>

  <div class="content">
    {{ post.content|convert_markdown_links|markdown_to_html }}
  </div>

  <hr>
  <p><a href="{{ path('app_news') }}">&larr; Back to News</a></p>
{% endblock %}
