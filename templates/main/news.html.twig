{% extends 'base.html.twig' %}

{% block title %}News - ProjT Launcher{% endblock %}

{% block body %}
  <nav style="font-size: 0.8em; border-bottom: none; margin-bottom: 0;">
    <a href="{{ path('app_launcher') }}">Overview</a>
    <a href="{{ path('app_news') }}" style="text-decoration: underline;">News</a>
    <a href="{{ path('app_about') }}">About</a>
    <a href="{{ path('app_handbook') }}">Wiki</a>
  </nav>
  <hr style="margin-top: 0;">

  <h1>News</h1>
  <p>Latest updates and releases for ProjT Launcher.</p>

  <div style="margin-top: 40px;">
    {% for post in news_list %}
        <div style="margin-bottom: 40px;">
            <h2 style="margin-bottom: 5px;"><a href="{{ path('app_news_show', {'slug': post.slug}) }}">{{ post.title }}</a></h2>
            <p style="font-size: 0.8em; color: #666; margin-bottom: 15px;">
                {% if post.category %}
                    <span style="background: rgba(255,255,255,0.1); padding: 2px 6px; border-radius: 4px; margin-right: 8px; border: 1px solid rgba(255,255,255,0.2);">{{ post.category.name }}</span>
                {% endif %}
                {{ post.date|date('F d, Y') }}
            </p>
            <p>{{ post.description }}</p>
            <a href="{{ path('app_news_show', {'slug': post.slug}) }}">Read more &rarr;</a>
        </div>
    {% else %}
        <p>No news yet. Stay tuned!</p>
    {% endfor %}
  </div>
{% endblock %}
