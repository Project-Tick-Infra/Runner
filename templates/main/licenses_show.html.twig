{% extends 'base.html.twig' %}

{% block title %}{{ license.name }} - Project Tick License{% endblock %}

{% block body %}
<div class="hero-section" style="background: linear-gradient(135deg, #050505 0%, #151515 100%); margin-bottom: 0;">
    <div class="container">
        <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px; justify-content: center;">
            <span class="badge badge-dark">OFFICIAL LICENSE</span>
            <span class="badge badge-outline" style="border-color: rgba(255,255,255,0.2); color: white;">{{ license.licenseCategory.name ?? 'Uncategorized' }}</span>
        </div>
        <h1 style="color: white; font-size: 4.5rem; letter-spacing: -2px;">{{ license.name }}</h1>
        <p class="lead" style="color: var(--pt-gray-300); margin-top: 20px;">Comprehensive legal framework for the Project Tick ecosystem.</p>
        
        <div style="margin-top: 40px; display: flex; justify-content: center; gap: 16px;">
            <a href="{{ path('app_licenses') }}" class="btn btn-secondary" style="background: transparent; border-color: rgba(255,255,255,0.2); color: white;">&larr; Back to Licenses</a>
            <a href="{{ path('app_licenses_show_txt', {'slug': license.slug}) }}" target="_blank" class="btn btn-primary">Download Raw Text</a>
        </div>
    </div>
</div>

<div class="container py-5" style="padding-top: 80px;">
    <div class="grid" style="grid-template-columns: 3fr 1fr; gap: 40px;">
        <div>
            <!-- Usage / Implementation Info -->
            {% if license.usageDocumentation %}
                <div class="card" style="border-left: 5px solid var(--pt-red); margin-bottom: 40px; background: rgba(255, 0, 60, 0.02);">
                    <h4 style="color: var(--pt-red); text-transform: uppercase; font-size: 0.8rem; letter-spacing: 0.1em; margin-top: 0;">Implementation Guide</h4>
                    <div style="font-size: 1.1rem; line-height: 1.8;">
                        {{ license.usageDocumentation|nl2br }}
                    </div>
                </div>
            {% endif %}

            <!-- Main Legal Text -->
            <div class="card" style="padding: 48px;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px; padding-bottom: 20px; border-bottom: 1px solid var(--border-color);">
                    <h3 style="margin: 0;">Legal Content</h3>
                    <div style="font-size: 0.75rem; color: var(--text-secondary); font-family: monospace; text-transform: uppercase;">UTF-8 Document</div>
                </div>
                
                <pre class="font-monospace" style="background: var(--pt-gray-100); padding: 40px; border: 1px solid var(--border-color); white-space: pre-wrap; font-size: 0.95rem; line-height: 1.7; color: var(--text-primary); border-radius: 4px; box-shadow: inset 0 2px 8px rgba(0,0,0,0.02);">{{ license.content }}</pre>
            </div>
        </div>

        <div>
            <!-- Sidebar Details -->
            <div class="card" style="position: sticky; top: 100px; padding: 32px;">
                <h4 style="margin-top: 0; margin-bottom: 24px; border-bottom: 2px solid var(--pt-red); display: inline-block;">Details</h4>
                
                <div style="margin-bottom: 24px;">
                    <label style="display: block; font-size: 0.75rem; color: var(--text-secondary); text-transform: uppercase; font-weight: 800; margin-bottom: 6px;">Category</label>
                    <div style="font-weight: 700;">{{ license.licenseCategory.name ?? 'Global' }}</div>
                </div>

                <div style="margin-bottom: 24px;">
                    <label style="display: block; font-size: 0.75rem; color: var(--text-secondary); text-transform: uppercase; font-weight: 800; margin-bottom: 6px;">SPDX Identifier</label>
                    <code class="font-monospace" style="color: var(--pt-red); font-weight: 700; font-size: 1rem;">{{ license.spdxIdentifier ?: license.slug }}</code>
                </div>

                <div style="margin-bottom: 32px;">
                    <label style="display: block; font-size: 0.75rem; color: var(--text-secondary); text-transform: uppercase; font-weight: 800; margin-bottom: 6px;">Status</label>
                    <div style="color: #2E7D32; font-weight: 700; display: flex; align-items: center; gap: 8px;">
                        <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
                        Official Release
                    </div>
                </div>

                <hr style="border: 0; border-top: 1px solid var(--border-color); margin: 24px 0;">

                <button onclick="window.print()" class="btn btn-secondary" style="width: 100%; margin-bottom: 12px;">Print Document</button>
                <a href="{{ path('app_licenses_show_txt', {'slug': license.slug}) }}" target="_blank" class="btn btn-ghost" style="width: 100%; text-align: center; border: 1px solid var(--border-color);">View Raw Source</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
