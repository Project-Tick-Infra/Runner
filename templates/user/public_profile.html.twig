{% extends 'base.html.twig' %}

{% block title %}{{ user.username ?: user.githubUsername ?: 'User Profile' }} - Project Tick{% endblock %}

{% block body %}
    <style>
        .profile-container {
            display: flex;
            gap: 48px;
            padding: 40px 0;
            align-items: flex-start;
        }
        
        @media (max-width: 768px) {
            .profile-container {
                flex-direction: column;
                gap: 24px;
            }
            .profile-sidebar {
                width: 100% !important;
            }
        }

        .profile-sidebar {
            flex: 0 0 296px;
            width: 296px;
        }

        .avatar-img {
            width: 100%;
            height: auto;
            border-radius: 50%;
            border: 1px solid #d0d7de;
            margin-bottom: 16px;
            background-color: #f6f8fa;
        }

        .profile-names h1 {
            font-size: 24px;
            font-weight: 600;
            line-height: 1.25;
            margin: 0;
            color: var(--pt-black);
        }

        .profile-names .nickname {
            font-size: 20px;
            font-weight: 300;
            color: var(--pt-gray-600);
            line-height: 24px;
        }

        .profile-bio {
            margin-top: 16px;
            font-size: 16px;
            color: var(--pt-black);
        }

        .vcard-details {
            margin-top: 16px;
            font-size: 14px;
            color: var(--pt-black);
        }

        .vcard-detail {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 4px;
        }

        .profile-content {
            flex: 1;
            min-width: 0;
            width: 100%;
        }

        .contribution-graph {
            border: 1px solid var(--border-color);
            border-radius: 6px;
            padding: 24px;
            margin-top: 24px;
            text-align: center;
            color: var(--text-secondary);
            background: var(--pt-gray-100);
        }
        
        .connection-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 8px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 12px;
            background: var(--pt-gray-100);
            color: var(--text-primary);
        }
    </style>

    <div class="container">
        <div class="profile-container">
            <!-- Left Sidebar -->
            <div class="profile-sidebar">
                {% if user.avatar %}
                    <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" class="avatar-img" alt="Profile Picture" style="border-color: var(--border-color); background: var(--pt-gray-100);">
                {% else %}
                    <img src="https://api.dicebear.com/7.x/identicon/svg?seed={{ user.username ?: user.email }}" class="avatar-img" alt="Profile Picture" style="background: var(--pt-gray-100); border-color: var(--border-color);">
                {% endif %}
                
                <div class="profile-names">
                    <h1>
                        {% if user.username %}
                            {{ user.username }}
                        {% elseif user.githubUsername %}
                            {{ user.githubUsername }}
                        {% else %}
                            {{ user.email|split('@')[0] }}
                        {% endif %}
                    </h1>
                </div>

                {% if user.biography %}
                    <div class="profile-bio">{{ user.biography|nl2br }}</div>
                {% endif %}

                <div class="vcard-details">
                    {% if user.country %}
                        <div class="vcard-detail">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                            {{ user.country }}
                        </div>
                    {% endif %}
                    
                    <div class="vcard-detail" style="margin-top: 16px; flex-wrap: wrap; gap: 8px;">
                        {% if user.githubId %}
                            <a href="https://github.com/{{ user.githubUsername }}" target="_blank" style="text-decoration: none; color: inherit;">
                                <div class="connection-badge" title="Verified GitHub Connection">
                                    <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="GitHub" width="14" height="14">
                                    GitHub
                                </div>
                            </a>
                        {% endif %}
                    </div>

                    <div style="margin-top: 24px; padding-top: 16px; border-top: 1px solid var(--pt-gray-200);">
                        <h4 style="font-size: 0.8rem; text-transform: uppercase; color: var(--pt-gray-600); margin-bottom: 12px;">Community Stats</h4>
                        <div style="display: flex; flex-direction: column; gap: 8px;">
                            <div style="display: flex; justify-content: space-between; font-size: 0.9rem;">
                                <span>Discussions</span>
                                <strong>{{ user.threads|length }}</strong>
                            </div>
                            <div style="display: flex; justify-content: space-between; font-size: 0.9rem;">
                                <span>Comments</span>
                                <strong>{{ user.comments|length }}</strong>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Main Content -->
            <div class="profile-content">
                <div style="border-bottom: 1px solid var(--border-color); margin-bottom: 24px; padding-bottom: 16px;">
                    <h2 style="font-size: 16px; margin: 0; color: var(--text-primary);">Public Activity</h2>
                </div>

                {% if user.githubUsername %}
                <div class="contribution-graph">
                    <h4 style="margin-bottom: 16px; text-align: left;">GitHub Contributions</h4>
                    <img src="https://ghchart.rshah.org/{{ user.githubUsername }}" alt="{{ user.githubUsername }}'s Github Chart" style="width: 100%; height: auto;" />
                </div>
                {% endif %}

                {% if user.gitlabUsername %}
                <div class="contribution-graph">
                    <h4 style="margin-bottom: 16px; text-align: left;">GitLab Contributions</h4>
                    <p style="font-size: 0.9rem; color: #666;">
                        (GitLab public activity graph API is restricted. Visit <a href="https://gitlab.com/{{ user.gitlabUsername }}" target="_blank">GitLab Profile</a>)
                    </p>
                    <!-- GitLab does not offer an easy public embeddable graph without complex API calls or third party tools like gitlab-profile-summary which are harder to integrate as image src. -->
                </div>
                {% endif %}
                
                {% if not user.githubUsername and not user.gitlabUsername %}
                     <div class="contribution-graph">
                        <p>No public activity found.</p>
                     </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
