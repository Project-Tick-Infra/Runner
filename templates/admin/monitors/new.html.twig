{% extends 'base.html.twig' %}

{% block title %}Add New Monitor | Project Tick{% endblock %}

{% block body %}
<div class="py-5" style="max-width: 800px; margin: 0 auto; padding: 0 20px;">
    <div style="margin-bottom: 40px;">
        <h1 style="font-family: var(--font-display); font-weight: 900;">Add New <span style="color:#EE0000">Monitor</span></h1>
        <p style="color: var(--text-secondary);">Configure a new endpoint to heartbeat check.</p>
    </div>

    <form method="post" style="background: var(--bg-card); padding: 40px; border-radius: 20px; border: 1px solid var(--pt-gray-100); box-shadow: 0 10px 30px rgba(0,0,0,0.05);">
        <div style="margin-bottom: 30px;">
            <label style="display: block; font-weight: 800; font-size: 0.85rem; text-transform: uppercase; margin-bottom: 10px; color: var(--text-primary);">Monitor Name</label>
            <input type="text" name="name" required placeholder="e.g. Primary API Gateway" style="width: 100%; padding: 15px; border-radius: 10px; border: 1px solid var(--border-color); background: var(--pt-gray-100); color: var(--text-primary); font-family: inherit; font-size: 1rem;">
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
            <div>
                <label style="display: block; font-weight: 800; font-size: 0.85rem; text-transform: uppercase; margin-bottom: 10px; color: var(--text-primary);">Type</label>
                <select name="type" style="width: 100%; padding: 15px; border-radius: 10px; border: 1px solid var(--border-color); background: var(--pt-gray-100); color: var(--text-primary); font-size: 1rem;">
                    <option value="http">HTTP(s)</option>
                    <option value="port">TCP Port</option>
                    <option value="dns">DNS</option>
                </select>
            </div>
            <div>
                <label style="display: block; font-weight: 800; font-size: 0.85rem; text-transform: uppercase; margin-bottom: 10px; color: var(--text-primary);">Heartbeat Interval (Seconds)</label>
                <input type="number" name="interval" value="60" style="width: 100%; padding: 15px; border-radius: 10px; border: 1px solid var(--border-color); background: var(--pt-gray-100); color: var(--text-primary); font-size: 1rem;">
            </div>
        </div>

        <div style="margin-bottom: 30px;">
            <label style="display: block; font-weight: 800; font-size: 0.85rem; text-transform: uppercase; margin-bottom: 10px; color: var(--text-primary);">Endpoint URL / Target</label>
            <input type="text" name="url" placeholder="https://api.example.com" style="width: 100%; padding: 15px; border-radius: 10px; border: 1px solid var(--border-color); background: var(--pt-gray-100); color: var(--text-primary); font-family: monospace; font-size: 1rem;">
        </div>

        <div style="margin-bottom: 40px;">
            <label style="display: block; font-weight: 800; font-size: 0.85rem; text-transform: uppercase; margin-bottom: 10px; color: var(--text-primary);">Internal Description (Optional)</label>
            <textarea name="description" rows="3" style="width: 100%; padding: 15px; border-radius: 10px; border: 1px solid var(--border-color); background: var(--pt-gray-100); color: var(--text-primary); font-family: inherit; resize: vertical;"></textarea>
        </div>

        <div style="display: flex; gap: 20px;">
            <button type="submit" class="btn btn-primary" style="flex: 2; padding: 18px; font-weight: 900; letter-spacing: 0.05em;">SAVE MONITOR</button>
            <a href="{{ path('admin_monitors_index') }}" class="btn btn-secondary" style="flex: 1; padding: 18px; background: transparent; border: 1px solid var(--pt-gray-200); text-align: center; font-weight: 700;">CANCEL</a>
        </div>
    </form>
</div>
{% endblock %}
