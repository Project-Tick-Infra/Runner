{% extends 'base.html.twig' %}

{% block title %}New Community Category - Admin{% endblock %}

{% block body %}
<div class="py-5">
    <div class="admin-header">
        <h1>New Category <span class="admin-breadcrumb">/ Community</span></h1>
    </div>

    <div class="card mt-4" style="max-width: 600px;">
        <form method="POST">
            <div class="form-group mb-4">
                <label class="form-label" style="font-weight: 700;">Category Name</label>
                <input type="text" name="name" class="form-control" placeholder="e.g. Technical Support" required autofocus>
            </div>

            <div class="form-group mb-5">
                <label class="form-label" style="font-weight: 700;">Description</label>
                <textarea name="description" rows="3" class="form-control" placeholder="Short summary of what belongs here..."></textarea>
            </div>

            <div style="display: flex; gap: 16px;">
                <button type="submit" class="btn btn-primary">Create Category</button>
                <a href="{{ path('app_admin_community') }}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
