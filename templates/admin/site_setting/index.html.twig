{% extends 'base.html.twig' %}

{% block title %}Site Settings{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
        <h1 style="margin: 0;">Site Settings</h1>
        <a href="{{ path('app_admin_settings_new') }}" class="btn btn-primary">Create New</a>
    </div>

    <div class="card" style="padding: 0;">
        <table class="table" style="margin: 0;">
            <thead>
                <tr>
                    <th style="border-top: none;">Key</th>
                    <th style="border-top: none;">Value</th>
                    <th style="border-top: none;">Description</th>
                    <th style="border-top: none; text-align: right;">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for site_setting in site_settings %}
                <tr>
                    <td><code style="background:var(--pt-gray-200); padding: 2px 6px; border-radius: 4px;">{{ site_setting.settingKey }}</code></td>
                    <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{ site_setting.settingValue }}</td>
                    <td>{{ site_setting.description }}</td>
                    <td style="text-align: right;">
                        <a href="{{ path('app_admin_settings_edit', {'id': site_setting.id}) }}" class="btn btn-secondary" style="font-size: 0.8rem; padding: 4px 8px;">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center; padding: 40px; color: var(--text-secondary);">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div style="margin-top: 24px;">
        <a href="{{ path('app_admin_dashboard') }}">&larr; Back to Dashboard</a>
    </div>
{% endblock %}
