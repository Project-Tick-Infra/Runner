{% extends 'base.html.twig' %}

{% block title %}Edit License Category{% endblock %}

{% block body %}
<div class="py-5">
    <div style="max-width: 800px;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 40px;">
            <div>
                <h1>Edit Category</h1>
                <p>Updating <code>{{ category.name }}</code></p>
            </div>
            <form method="post" action="{{ path('app_admin_license_categories_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category? All associated licenses will remain but lose their category link.');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button class="btn btn-secondary" style="color: var(--pt-red); border-color: var(--pt-red);">Delete Category</button>
            </form>
        </div>
        
        <div class="card">
            {{ form_start(form) }}
                <div class="form-group">
                    <label class="form-label">Category Name</label>
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    <label class="form-label">Display Order</label>
                    {{ form_widget(form.displayOrder, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    <label class="form-label">Description</label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'min-height: 100px;'}}) }}
                </div>
                
                <div style="margin-top: 32px; display: flex; gap: 16px;">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                    <a href="{{ path('app_admin_license_categories') }}" class="btn btn-secondary">Cancel</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
