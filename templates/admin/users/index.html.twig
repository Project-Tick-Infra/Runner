{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
<div class="py-5">
    <div class="admin-header">
        <h1>Manage Users <span class="admin-breadcrumb">/ User Directory</span></h1>
        <div class="admin-header-actions">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">&larr; Dashboard</a>
        </div>
    </div>
    
    <div class="card mt-4">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td style="font-family: var(--font-monospace); font-size: 0.85rem; color: var(--pt-gray-500);">#{{ user.id }}</td>
                        <td style="font-weight: 600;">{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge" style="background: rgba(0,0,0,0.05); color: var(--pt-black); border: 1px solid rgba(0,0,0,0.1); font-size: 0.7rem; margin-right: 4px;">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <div style="display: flex; gap: 12px; align-items: center;">
                                <a href="{{ path('app_admin_users_edit', {id: user.id}) }}" class="btn btn-sm" style="padding: 6px 12px; font-size: 0.8rem; background: var(--pt-gray-100); color: var(--pt-black);">Edit</a>
                                {% if not ('ROLE_ADMIN' in user.roles and user.id == app.user.id) %}
                                <form method="post" action="{{ path('app_admin_users_delete', {'id': user.id}) }}" style="margin: 0;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm" style="padding: 6px 12px; font-size: 0.8rem; background: transparent; color: #C62828; border: 1px solid #C62828;">Delete</button>
                                </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

