{% extends 'base.html.twig' %}

{% block title %}Register New User{% endblock %}

{% block body %}
<div class="container" style="max-width: 400px; margin: 40px auto;">
    <h1>Create User</h1>
    
    <form method="post">
        <input type="hidden" name="_token" value="{{ csrf_token('admin_register') }}">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group" style="margin-top: 15px;">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        
        <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Register</button>
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary" style="margin-top: 20px;">Cancel</a>
    </form>
</div>
{% endblock %}
