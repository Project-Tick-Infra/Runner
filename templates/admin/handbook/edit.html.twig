{% extends 'base.html.twig' %}

{% block title %}Edit Handbook Entry - Admin{% endblock %}

{% block body %}
<div class="py-5">
    <div style="max-width: 900px;">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 40px;">
            <div>
                <h1>Edit Handbook Entry</h1>
                <p>Updating <code>{{ entry.title }}</code></p>
            </div>
            <form method="post" action="{{ path('app_admin_handbook_delete', {'id': entry.id}) }}" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entry.id) }}">
                <button class="btn btn-secondary" style="color: var(--pt-red); border-color: var(--pt-red);">Delete Entry</button>
            </form>
        </div>
        
        <div class="card">
            {{ form_start(form) }}
                <div class="grid" style="grid-template-columns: 1fr 1fr; gap: 24px;">
                    <div class="form-group">
                        <label class="form-label">Entry Title</label>
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label class="form-label">Category</label>
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">System Slug</label>
                    {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    <label class="form-label">Content (Markdown)</label>
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'style': 'min-height: 500px; font-family: monospace;'}}) }}
                </div>
                
                <div style="margin-top: 32px; display: flex; gap: 16px;">
                    <button type="submit" class="btn btn-primary">Update Entry</button>
                    <a href="{{ path('app_admin_handbook') }}" class="btn btn-secondary">Cancel</a>
                    <a href="{{ path('app_handbook_show', {'slug': entry.slug}) }}" target="_blank" class="btn btn-ghost">Preview Changes</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
