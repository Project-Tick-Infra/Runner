{% extends 'base.html.twig' %}

{% block title %}Automation Hub | Project Tick{% endblock %}

{% block body %}
<div class="py-5" style="max-width: 1200px; margin: 0 auto; padding: 0 20px;">
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 40px;">
        <div>
            <h1 style="font-family: var(--font-display); font-weight: 900;">Automation <span style="color:#EE0000">Hub</span></h1>
            <p style="color: var(--text-secondary);">Manage Project Tick AI Bot and PR Automations.</p>
        </div>
        <form action="{{ path('app_admin_bot_run') }}" method="POST">
            <button type="submit" class="btn btn-primary" style="padding: 12px 30px; font-weight: 800; display: flex; align-items: center; gap: 10px;">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 12a9 9 0 1 1-9-9c2.52 0 4.93 1 6.74 2.74L21 8"/><polyline points="21 3 21 8 16 8"/></svg>
                TRIGGER SCAN
            </button>
        </form>
    </div>

    <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 40px;">
        <!-- Configuration Column -->
        <div class="config-col">
            <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px; text-transform: uppercase; color: var(--text-secondary);">Direct Actions</h3>
            
            <div style="display: grid; gap: 20px; margin-bottom: 40px;">
                <a href="{{ path('app_admin_bot_prs') }}" style="background: white; border: 1px solid #eee; padding: 20px; border-radius: 15px; text-decoration: none; color: inherit; display: flex; align-items: center; justify-content: space-between; transition: all 0.2s;" onmouseover="this.style.borderColor='#EE0000'" onmouseout="this.style.borderColor='#eee'">
                    <div>
                        <div style="font-weight: 800; font-size: 1.1rem;">Manage PRs</div>
                        <div style="font-size: 0.8rem; color: #999;">{{ pr_count }} pull requests tracked.</div>
                    </div>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#EE0000" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
                </a>

                <a href="{{ path('app_admin_bot_diff') }}" style="background: white; border: 1px solid #eee; padding: 20px; border-radius: 15px; text-decoration: none; color: inherit; display: flex; align-items: center; justify-content: space-between; transition: all 0.2s;" onmouseover="this.style.borderColor='#EE0000'" onmouseout="this.style.borderColor='#eee'">
                    <div>
                        <div style="font-weight: 800; font-size: 1.1rem;">Version Compare</div>
                        <div style="font-size: 0.8rem; color: #999;">Generate diffs between tags.</div>
                    </div>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#EE0000" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
                </a>

                <div style="background: white; border: 1px solid #eee; border-radius: 15px; padding: 20px; transition: all 0.2s; position: relative;" onmouseover="this.style.borderColor='#EE0000'" onmouseout="this.style.borderColor='#eee'">
                    <div style="margin-bottom: 15px;">
                        <div style="font-weight: 800; font-size: 1.1rem;">Commit History</div>
                        <div style="font-size: 0.8rem; color: #999;">{{ commit_count }} total commits stored.</div>
                    </div>
                    <div style="display: flex; gap: 10px;">
                        <a href="{{ path('app_admin_bot_commits') }}" style="background: #f0f0f0; border: none; padding: 8px 15px; border-radius: 8px; font-weight: 800; font-size: 0.7rem; cursor: pointer; color: #555; text-decoration: none;">VIEW ALL</a>
                        <form action="{{ path('app_admin_bot_sync_commits') }}" method="POST" style="margin:0;">
                            <button type="submit" style="background: var(--pt-red); border: none; padding: 8px 15px; border-radius: 8px; font-weight: 800; font-size: 0.7rem; cursor: pointer; color: #fff;">SYNC ALL</button>
                        </form>
                    </div>
                </div>
            </div>

            <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px; text-transform: uppercase; color: var(--text-secondary);">Live Configuration</h3>
            
            <div style="background: var(--bg-card); border-radius: 20px; border: 1px solid var(--pt-gray-100); padding: 30px;">
                <div style="margin-bottom: 25px;">
                    <label style="display:block; font-size:0.75rem; font-weight:900; color:var(--text-secondary); margin-bottom:8px;">ALWAYS REVIEWERS</label>
                    <div style="background: var(--pt-gray-50); padding: 12px; border-radius: 8px; font-family: monospace; font-size: 0.9rem; word-break: break-all;">
                        {{ config.always_reviewers }}
                    </div>
                </div>

                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0; border-bottom: 1px solid var(--pt-gray-50);">
                    <span style="font-weight: 700; font-size: 0.9rem;">Auto-Merge Status</span>
                    <span style="background: {% if config.auto_merge == 'true' %}#00C853{% else %}#ccc{% endif %}; color: white; padding: 4px 10px; border-radius: 4px; font-size: 0.75rem; font-weight: 900;">
                        {{ config.auto_merge|upper }}
                    </span>
                </div>

                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0; border-bottom: 1px solid var(--pt-gray-50);">
                    <span style="font-weight: 700; font-size: 0.9rem;">Approve on Green CI</span>
                    <span style="background: {% if config.approve_on_green == 'true' %}#00C853{% else %}#ccc{% endif %}; color: white; padding: 4px 10px; border-radius: 4px; font-size: 0.75rem; font-weight: 900;">
                        {{ config.approve_on_green|upper }}
                    </span>
                </div>
            </div>
        </div>

        <!-- Logs Column -->
        <div class="logs-col">
            <h3 style="font-size: 1.1rem; font-weight: 800; margin-bottom: 20px; text-transform: uppercase; color: var(--text-secondary);">Activity Stream</h3>
            
            <!-- Bot Scan Logs -->
            <div style="margin-bottom: 30px;">
                <div style="font-size: 0.8rem; font-weight: 900; margin-bottom: 10px; color: #999;">BOT SCAN ACTIVITY</div>
                <div style="background: #0D1117; border-radius: 15px; padding: 20px; border: 1px solid #30363D;">
                    <pre style="margin: 0; color: #E6EDF3; font-family: 'JetBrains Mono', monospace; font-size: 0.8rem; line-height: 1.4; overflow-x: auto; max-height: 250px;">{{ bot_logs }}</pre>
                </div>
            </div>

            <!-- CLA Checker Logs -->
            <div>
                <div style="font-size: 0.8rem; font-weight: 900; margin-bottom: 10px; color: #999;">CLA CHECKER ACTIVITY</div>
                <div style="background: #0D1117; border-radius: 15px; padding: 20px; border: 1px solid #30363D;">
                    <pre style="margin: 0; color: #E6EDF3; font-family: 'JetBrains Mono', monospace; font-size: 0.8rem; line-height: 1.4; overflow-x: auto; max-height: 250px;">{{ cla_logs }}</pre>
                </div>
            </div>
        </div>
    </div>

    <div style="margin-top: 40px;">
        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary" style="background: transparent; border: 1px solid var(--pt-gray-200);">&larr; Back to Dashboard</a>
    </div>
</div>

<style>
    pre::-webkit-scrollbar { width: 8px; }
    pre::-webkit-scrollbar-track { background: #0D1117; }
    pre::-webkit-scrollbar-thumb { background: #30363D; border-radius: 10px; }
</style>
{% endblock %}
