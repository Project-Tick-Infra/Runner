<form method="post" action="{{ path('app_admin_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn" style="background: #FFF1F0; color: #DC2626; border-color: #FECACA;">Delete</button>
</form>
