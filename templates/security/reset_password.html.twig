{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
<section class="auth-section">
    <div class="container container-center">
        <div class="card auth-card">
            <h1>Reset Your Password</h1>
            <p>Enter a new password for your account.</p>

            <form method="post">
                <input type="hidden" name="_token" value="{{ csrf_token('reset_password') }}">
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input type="password" name="password" id="password" class="form-control" required minlength="8">
                </div>
                <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control" required minlength="8">
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 20px;">Update Password</button>
            </form>
        </div>
    </div>
</section>
{% endblock %}
