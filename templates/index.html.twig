{% extends 'base.html.twig' %}

{% block title %}Project Tick{% endblock %}

{% block body %}
<div class="hero">
  <h1>{{ site_setting('home_hero_title', 'Welcome to Project Tick') }}</h1>
  <p style="font-size: 1.25rem; max-width: 600px; margin: 0 auto 32px;">
    {{ site_setting('home_hero_desc', 'Open source software focused on user freedom, transparency, and community-driven development.') }}
  </p>
  
  <div style="display: flex; justify-content: center; gap: 16px;">
    <a href="{{ path('app_launcher') }}" class="btn btn-primary">Download Launcher</a>
    <a href="{{ path('app_project_news') }}" class="btn btn-simple">Read News</a>
  </div>
</div>

<div class="grid">
  
  <div class="card">
    <h3>ProjT Launcher</h3>
    <p>A powerful, open source Minecraft launcher with instance management, multiple accounts, and mod support.</p>
    <div style="margin-top: auto;">
        <a href="{{ path('app_launcher') }}">Visit Website &rarr;</a>
    </div>
  </div>

  <div class="card">
    <h3>Handbook</h3>
    <p>Comprehensive documentation for our projects, architecture, and development guidelines.</p>
    <div style="margin-top: auto;">
        <a href="{{ path('app_handbook') }}">Browse Handbook &rarr;</a>
    </div>
  </div>

</div>
{% endblock %}
