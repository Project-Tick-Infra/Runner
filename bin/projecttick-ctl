COMMAND=$1
SERVICE=${2:-all}

function show_help() {
    echo -e "\e[34m"
    echo "  Project Tick Control"
    echo -e "\e[0m"
    echo "Usage: projecttick-ctl [command] [service]"
    echo ""
    echo "Commands:"
    echo "  start         Start services"
    echo "  stop          Stop services"
    echo "  restart       Restart services"
    echo "  status        Show status of services"
    echo "  tail          Tail logs for services"
    echo "  reconfigure   Reconfigure the environment settings"
    echo ""
    echo "Services: nginx, php-fpm, mariadb, all (default)"
    echo ""
}

if [ -z "$COMMAND" ]; then
    show_help
    exit 1
fi

case "$COMMAND" in
    start|stop|restart|status)
        echo "Running '$COMMAND' for service: $SERVICE..."
        if [ "$SERVICE" == "all" ]; then
            systemctl $COMMAND projt-nginx projt-php-fpm projt-mariadb
        else
            systemctl $COMMAND projt-$SERVICE
        fi
        ;;
    tail)
        echo "Tailing logs for $SERVICE... (Press Ctrl+C to exit)"
        if [ "$SERVICE" == "all" ]; then
            tail -f /var/log/projt-nginx*.log /var/log/projt-php-fpm.log /opt/projt-portal/var/log/prod.log
        elif [ "$SERVICE" == "nginx" ]; then
            tail -f /var/log/projt-nginx*.log
        elif [ "$SERVICE" == "php-fpm" ]; then
            tail -f /var/log/projt-php-fpm.log
        elif [ "$SERVICE" == "mariadb" ]; then
            tail -f /opt/projt-portal/mariadb/data/*.err
        else
            echo "Unknown service for tail."
        fi
        ;;
    reconfigure)
        echo "Reconfiguring Project Tick System..."
        if [ -f "/opt/projt-portal/setup_rhel.sh" ]; then
            # Run without interactive prompts to just re-apply configs
            /opt/projt-portal/setup_rhel.sh -a
        else
            echo "Error: setup_rhel.sh not found."
        fi
        ;;
    *)
        show_help
        ;;
esac
